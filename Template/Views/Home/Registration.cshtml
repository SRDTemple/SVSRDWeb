                    </span>

                    <input type="text" id="fullname" class="form-control" placeholder="Full Name" onblur="validaterequired('name')">
                </div>
                <div class="col-sm-12 input-group">
                    <span class="form-group bottommargin_0 input-group-addon">
                        <i class="fa fa-envelope"><span class="required">&nbsp;*</span></i>
                    </span><input type="email" pattern=".+com" aria-required="true" size="30" value="" name="email" id="email" class="form-control" placeholder="Email Address*" onblur="validaterequired('email')">
                </div>
                <div class="col-sm-12 input-group">
                    <span class="form-group bottommargin_0 input-group-addon">
                        <i class="fa fa-mobile-phone"><span class="required">&nbsp;*</span></i>
                    </span> <input type="number" size="30" value="" name="phone" id="phone" class="form-control" placeholder="Phone Number" onblur="validaterequired('phone')">
                </div>
                <div class="col-sm-12">

                    <div class="contact-form-submit topmargin_20"> <button type="submit" id="register_form_submit" name="register_submit" class="theme_button color2 min_width_button margin_0">Register</button> </div>
                </div>
                @*}*@
            </div>
            <div class="col-sm-6" style="height:51px">
                <div class="col-sm-12 input-group">
                    <span id="lblfullname" style="color:red"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-12 input-group">
                    <span id="lblemail" style="color:red"></span>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-12 input-group">
                    <span id="lblphone" style="color:red"></span>
                </div>
            </div>

        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $("#register_form_submit").click(function () {
            alert("hi");
            var fullname = $("#fullname").val();
            var email = $("#email").val();
            var phone = $("#phone").val();
            if (fullname == '' || email == '' || phone == '') {
                if (fullname == '') {
                    $("#lblfullname").html("Full name is required:");
                }
                if (email == '') {
                    $("#lblemail").html("Email is required:");
                }
                if (phone == '') {
                    $("#lblphone").html("Phone is required:");
                }
            }
            else {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Registration", "Home")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ fullname: fullname, email: email, phone: phone }),
                    dataType: "json",
                    success: function (Result) {
                        alert(Result.Result);
                        window.location = '@Url.Action("Registration", "Home")';
                    },
                    error: function (Result) {
                        alert(Result.Result);
                        window.location = '@Url.Action("Registration", "Home")';
                    }
                });
            }
        });
    });
</script>
<script>
    function validaterequired(e) {
        var fullname = $("#fullname").val();
        var email = $("#email").val();
        var phone = $("#phone").val();
        switch (e) {
            case 'name':
                if (fullname == '' || fullname == null) {
                    $("#lblfullname").html("Full name is required:");
                }
                else {
                    $("#lblfullname").html("");
                }
                break;
            case 'email':
                if (email == '' || email == null) {
                    $("#lblemail").html("Email is required:");
                }
                else {
                    $("#lblemail").html("");
                }
                break;
            case 'phone':
                if (phone == '' || phone == null) {
                    $("#lblphone").html("Phone is required:");
                }
                else {
                    $("#lblphone").html("");
                }
                break;
        }
    }
</script>



